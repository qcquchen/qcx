.header {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  border-bottom: 1rpx solid #ccc;
  height: 400rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

