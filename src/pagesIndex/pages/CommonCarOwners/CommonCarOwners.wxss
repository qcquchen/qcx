/*提交按钮*/

.submit {
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.submit > button::after {
  border: none;
}

.submit > button {
  font-size: 32rpx;
  margin: 12rpx 24rpx;
  color: #fff;
  border-radius: 30rpx;
  background: linear-gradient(to right, #50d1ff, #4374ff);
}

.submit .submit_Text {
  width: 100%;
  display: -ms-flexbox;
  display: flex;
  padding-top: 10rpx;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.submit .submit_Text .submit_number {
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.submit .submit_Text .submit_number > text {
  font-size: 40rpx;
  font-weight: 700;
}

.submit .submit_Text .submit_number .loc_icon {
  width: 28rpx;
  height: 28rpx;
}

/*swtich整体大小及背景色*/

.wx-switch-input {
  width: 72rpx !important;
  height: 44rpx !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 72rpx !important;
  height: 44rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 40rpx !important;
  height: 40rpx !important;
}

/*添加成功原力值弹窗*/

.modal-dialog {
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 30%;
  z-index: 9999;
  background: #000;
  opacity: 0.6;
  border-radius: 36rpx;
}

.modal-dialogCenter {
  width: 100%;
  height: 240rpx;
  margin: 30rpx auto;
}

.modal-title {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.modal-footer {
  height: 84rpx;
  width: 84rpx;
  padding: 24rpx 0;
  margin: 0 auto;
}

.modal-footer > image {
  width: 100%;
  height: 100%;
  display: block;
}

.btn-confirm {
  width: 100%;
  color: #ffaa1f;
  font-size: 32rpx;
  text-align: center;
}
