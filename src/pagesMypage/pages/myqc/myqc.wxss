/* pages/mypage/myqc/myqc.wxss */

.billboard {
  width: 90%;
  margin: 10rpx auto;
  font-size: 30rpx;
  color: #606266;
  text-align: right;
  text-decoration: underline;
}

/* 走势图 */

ec-canvas {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 600rpx;
  border-bottom: 20rpx solid #f5f5f7;
}

/* 当前QC */

.presentQc {
  width: 90%;
  height: 300rpx;
  background: linear-gradient(to right, #50d1ff, #4374ff);
  border-radius: 16rpx;
  margin: 0 auto;
  overflow: hidden;
}

.presentQc-box {
  width: 90%;
  margin: 0 auto;
  position: relative;
}

.presentQc-box-txt1 {
  font-size: 28rpx;
  color: white;
  margin-top: 30rpx;
}

.presentQc-box1 {
  margin-top: 28rpx;
}

.presentQc-box-txt2 {
  font-size: 60rpx;
  color: white;
}

.presentQc-box-txt3 {
  font-size: 28rpx;
  color: white;
  margin-left: 20rpx;
}

.presentQc-box-txt4 {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: white;
  margin-top: 62rpx;
}

.sell-offs {
  width: 120rpx;
  height: 44rpx;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 44rpx;
  color: #4581ff;
  position: absolute;
  top: 40rpx;
  right: 0rpx;
  font-size: 26rpx;
}

/* QC明细 */

.details-box {
  width: 90%;
  margin: 0 auto;
}

.details-txt {
  font-size: 32rpx;
  color: #232426;
  font-weight: 600;
  margin-top: 10rpx;
}

.details-dui {
  height: 120rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #f2f2f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.details-left {
  font-size: 34rpx;
}

.details-left-txt {
  font-size: 28rpx;
  color: #939499;
}

.details-right {
  font-size: 40rpx;
}

/* 售出交易 */

.sellTrade {
  width: 100%;
  height: 546rpx;
  box-shadow: 0px -5px 5px #f2f2f5;
  border-radius: 30rpx;
  background: white;
  position: fixed;
  left: 0;
  bottom: 0;
}

.sellTrade-top {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #232426;
  text-align: center;
  border-bottom: 1rpx solid #f2f2f5;
}

.sellTrade-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 32rpx;
  left: 20rpx;
}

.toda {
  width: 90%;
  margin: 20rpx auto;
  font-size: 34rpx;
  color: #666;
  display: flex;
}

.toda-txt {
  font-size: 34rpx;
  color: #ffa100;
  margin-left: 10rpx;
}

.se-sum {
  width: 90%;
  margin: 60rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.se-sum-le {
  font-size: 34rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.toda-txt1 {
  border-bottom: 1rpx solid #f2f2f5;
  margin-left: 20rpx;
}

.kugo {
  width: 80%;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #666;
}

.kugo-txt1 {
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.kugo-txt2 {
  font-size: 22rpx;
  color: #939499;
}

.tijiao-btn {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 auto;
  background: linear-gradient(to right, #50d1ff, #4374ff);
  color: white;
  font-size: 32rpx;
  text-align: center;
  border-radius: 48rpx;
}

/* 交易密码 */

/* 支付密码css start */

.bg_layer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9998;
}

.input_main {
  position: fixed;
  left: 50%;
  transform: translate(-50%);
  bottom: 500rpx;
  width: 70%;
  height: 520rpx;
  background-color: #fff;
  z-index: 9999;
  border-radius:20rpx;
}

.input_title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.input_back {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_back text {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}

.input_tip {
  margin: 30rpx;
  font-size: 60rpx;
  color:#232426;
  text-align: center;
}
.input_tip-txt{
  font-size: 22rpx;
  color: #939499;
}
.input_tip-txt1{
  font-size: 28rpx;
  color: #484848;
}
.input_tip-txt2{
  font-size: 28rpx;
  color: #F5A623;
}
/* 密码掩码模拟 */

.input_row {
  width:99%;
  margin: 0 auto;
  height: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #e2e2e2;
  border-radius: 20rpx;
}

.input_row .pwd_item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  border-right: 1rpx solid #e2e2e2;
  position: relative;
}

.pwd_item:nth-last-of-type(1) {
  border-right: 0;
}

.pwd_item text {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #555;
}

.forget_pwd {
  float: right;
  margin: 30rpx;
  width: 130rpx;
  text-align: right;
  font-size: 24rpx;
  color: #4A90E2;
}

/* 文本输入框位置: 设置到左边隐藏 */

.input_control {
  position: relative;
  left: -300rpx;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
}
