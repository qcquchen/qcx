/* pages/mypage/journey/journey.wxss */

/* 顶部tab切换 */

page {
  background-color: #edf0f3;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  background: white;
}

.default {
  width: 20%;
  line-height: 100rpx;
  text-align: center;
  color: #abacb1;
  font-weight: bold;
  font-size: 28rpx;
}

.red {
  width: 20%;
  border-bottom: 4rpx solid #2297ff;
  line-height: 100rpx;
  text-align: center;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  width: 94%;
  margin: 0 auto;
}

.hidden {
  display: none;
  width: 94%;
  margin: 0 auto;
}

/* 车主内容 */

.passengerTxt {
  font-size: 32rpx;
  color: #232426;
  margin: 20rpx auto;
}

.contener-box {
  height: 550rpx;
  background: white;
  padding: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 5rpx -5rpx 5rpx #e9ecf1;
  margin-top: 20rpx;
}

.contener-box-box {
  height: 500rpx;
  background: white;
  padding: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 5rpx -5rpx 5rpx #e9ecf1;
  margin-top: 20rpx;
}

.contener-txt {
  font-size: 34rpx;
  color: #232426;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f2f2f6;
}

.conterner-photo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 42rpx;
  margin-top: 20rpx;
}

.conterner-left {
  display: flex;
  align-items: center;
}

.photo-img {
  width: 100rpx;
  height: 100rpx;
  background: red;
  border-radius: 50%;
  margin-right: 20rpx;
}

.photo-txt {
  font-size: 32rpx;
  color: #66676b;
}

.photo-img-ri {
  width: 40rpx;
  height: 40rpx;
}

.time-box {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  margin-top: 20rpx;
}

.time-box-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.time-box-box {
  display: flex;
  align-items: center;
}

.time-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.time-txt {
  font-size: 28rpx;
  color: #47494a;
}

.conterner-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.conterner-bottom-pic {
  font-size: 52rpx;
  color: #212225;
}

.conterner-bottom-yuan {
  font-size: 28rpx;
  color: #232426;
}

/* ************************************** */

.conterner-bottom-img {
  display: flex;
  align-items: center;
}

.conterner-bottom-img image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 10rpx;
}

.conterner-zan {
  height: 120rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f2f2f6;
}

.zan-img {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #dcdcdd;
}

.zan-img image {
  width: 46rpx;
  height: 60rpx;
  display: block;
}

/* 历史行程 */

.contener-box-1 {
  height: 290rpx;
  background: white;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 5rpx -5rpx 5rpx #e9ecf1;
  margin-top: 20rpx;
}

.conterner-bottom-z {
  text-align: right;
  font-size: 52rpx;
  color: #212225;
  margin-top: 20rpx;
}

.jour-no {
  font-size: 32rpx;
  color: #C8C9CC;
  text-align: center;
  margin: 20rpx;
}

/* 乘客行程 */

.time-box-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.time-box-2 {
  display: flex;
  align-items: center;
}
