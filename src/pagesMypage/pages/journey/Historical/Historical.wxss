/* pages/mypage/journey/Historical/Historical.wxss */

page {
  background: #f5f5f7;
  height: 100%;
}

.contener-box {
  height: 380rpx;
  background: white;
  padding: 0 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.time-box {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.time-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.time-txt {
  font-size: 34rpx;
  color: #47494a;
}

.conterner-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
}

/* 车主信息 */

.histInfo {
  width: 100%;
  height: 230rpx;
  margin-bottom: 20rpx;
  background: white;
  font-size: 32rpx;
  color: #3a3b3d;
  padding: 20rpx;
}

.histInfo-txt {
  height: 100rpx;
  line-height: 100rpx;
}

.histInfo-img {
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.histInfo-img-left {
  display: flex;
  align-items: center;
}

.img-left-img {
  width: 100rpx;
  height: 100rpx;
  background: red;
  border-radius: 50%;
}

.histInfo-name {
  margin-left: 20rpx;
}

.name-bottom {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #696b6e;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.name-bottom-txt {
  border: 1rpx solid #232427;
  font-size: 26rpx;
  margin-right: 10rpx;
  padding: 2rpx;
}

.histInfo-img-right {
  width: 40rpx;
  height: 40rpx;
}

/* 价格 */

.histPic {
  height: 100rpx;
  background: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
}

.info-btn {
  position: fixed;
  transform: translate(-50%);
  left: 50%;
  bottom: 20rpx;
  width: 94%;
  background: #f6f6f6;
  border-radius: 22rpx;
  overflow: hidden;
}

.other-button-hover-1 {
  background: linear-gradient(to right, #50d1ff, #4374ff);
  color: #fff;
}
