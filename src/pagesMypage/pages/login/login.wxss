/* pages/mypage/login/login.wxss */
.header {
  padding: 15px;
  padding-bottom: 30px;
  font-size: 28px;
  /*font-weight: 600;*/
  color: #404040;
}

.form_login {
  padding: 0 15px;
}

.form_login .section {
  border-bottom: 1px solid #ededf0;
  padding: 15px 0;
}

.form_login .section > button {
  margin: 0;
  padding: 0;
  font-size: 14px;
  background: #fff;
  color: #4186e7;
}

.form_login .section > button::after {
  border: none;
}

.form_login .section .code_font_color {
  color: #939499;
}

.form_login .verification_code {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.form_login .verification_code > input {
  -ms-flex: 6;
  flex: 6;
}

.form_login .verification_code > view {
  -ms-flex: 4;
  flex: 4;
  text-align: right;
  color: #b9bdc3;
}

.submit {
  margin-top: 70px;
}

.submit > button {
  margin: 0 15px;
  color: #fff;
  border-radius: 10px;
}

.submit > button:active {
  background: #1b1b1b;
}

.submit .button_active_none {
  background: #888;
}

.submit .button_active_over {
  background: #383838;
}

.border_No {
  border-bottom: 1px solid #e64340 !important;
}
