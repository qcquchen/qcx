<block wx:if="{{isAuthorized}}">
	<view class="authorized">
		<view class="code">
			<image class="logo" src="../../images/0logo.png"></image>
			<view class="tipe">登录后才能正常使用趣出行</view>
			<view class="tipe">请点击按钮登录</view>
			<button class="authorized_btn" wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
				<image src="../../images/Group_60.png"></image>
				<view>微信登录</view>
			</button>
			<button class="authorized_btn" wx:else>
				<view>请升级微信版本</view>
			</button>
			<image class="close" catchtap="_cancelEvent" src="../../images/btn_close_mini.png"></image>
		</view>
	</view>
</block>