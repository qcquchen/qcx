.header {
  padding: 12px; }
  .header > view {
    font-size: 16px;
    color: #484848; }
  .header .status {
    font-size: 16px;
    color: #484848;
    font-weight: 600; }
  .header .time {
    font-size: 12px;
    color: #737373;
    padding: 8px 0; }
  .header .phone {
    margin-bottom: 8px; }

.body .img_title {
  font-size: 12px;
  color: #737373;
  padding: 5px 12px; }

.body > image {
  width: 100%;
  height: 280px;
  background: #ededf0;
  display: block; }

.foot_btn {
  padding: 12px; }
  .foot_btn > button {
    color: #ffffff;
    font-size: 16px; }
  .foot_btn > button::after {
    border: none; }
  .foot_btn .yes {
    background: linear-gradient(to right, #2EBFFF, #4287FF);
    margin-bottom: 10px; }
  .foot_btn .pass {
    color: #484848;
    font-size: 16px;
    border: 1px solid #ededf0;
    background: #ffffff; }
