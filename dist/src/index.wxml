<view class="body"> 
	<view class="index_conter">
		 <image src='../images/zhuye/背景.png'></image>
  </view>
  <view class="beijing">
    <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">乘客</view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">车主</view>
      <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">原力</view>
    </view>
    <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
      <!-- 乘客页 -->
      <swiper-item>
        <!-- 获取当前位置 -->
        <view class="header" bindtap="gotoSearch">
          <view class="location pad">
            <image class="loc_icon" src="../../images/assets/icon_start@2x.png"></image>
            <view class="location_input">
               <input style="width: 100%" value="{{ start_addr }}" type="text" placeholder="正在获取当前的位置" disabled="true" bindtap="getLocation" data-id="start"/>
            </view>
          </view>
          <view class="location">
             <image class="loc_icon" src="../../images/assets/icon_end@2x.png"></image>
             <view class="location_one pad">
                <view class="location_input">
                  <view value="{{ end_addr }}" type="text" disabled="true" bindtap="getLocation" data-id="end">您要去哪？</view>
                </view>
              <button >+50原力</button> 
            </view>
          </view>
        </view>
        <!-- 待完成行程 -->
        <view class="one">
          <view class="one_header_0">
            <view class="one_header_0left">{{ strokeText }}</view>
            <view class="one_header_0left one_header_0left_text">{{ strokeText1 }}</view>
          </view>
          <view class="one_header">
            <view class="one_header_top">
              <image src='../../images/btn_me.png'></image>
            </view>
            <view class="one_header_bottom">
              <view class="one_header_bottom1">
                <view class="textTop">{{ textTop }}</view>
                <view class="textBottom">
                <view class="textBottom_Left">{{ textBottom }}</view>
                  <view class="textBottom_center"><image src='../../images/icon_arrow_black@3x.png'></image></view>
                  <view class="textBottom_Left">{{ textBottom }}</view>
                </view>
              </view>
              <view class="one_header_bottom2">{{ strokeText3 }}</view>
            </view>
          </view>
          <!-- 待支付模块 -->
          <view class="one_header">
            <view class="one_header_top">
              <image src='../../images/btn_me.png'></image>
            </view>
            <view class="one_header_bottom bottom_bod">
              <view class="one_header_bottom1">
                <view class="textTop">{{ textTop }}</view>
                <view class="textBottom">
                  <view class="textBottom_Left">{{ textBottom }}</view>
                  <view class="textBottom_center"><image src='../../images/icon_arrow_black@3x.png'></image></view>
                  <view class="textBottom_Left">{{ textBottom }}</view>
                </view>
              </view>
              <view class="one_header_bottom2">{{ strokeText2 }}</view>
            </view>
          </view>
        </view>
        <!-- 常用线路 -->
        <view class="one">
          <view class="one_header_0">
            <view class="one_header_0left">常用线路</view>
            <view class="one_header_0left one_header_0left_text">管理></view>
          </view>
          <view class="one_header one_header_right">
            <view class="one_header_bottom">
              <view class="one_header_bottom1 one_header_bottom12">
                <view class="textTop textTop_img"><view>上班</view>09:35</view>
                <view class="textBottom">
                  <view class="textBottom_Left">上地十四街海淀创业园</view>
                  <view class="textBottom_center"><image src='../../images/icon_arrow_black@3x.png'></image></view>
                  <view class="textBottom_Left">生命科学园地铁站昌平区</view>
                </view>
              </view>
              <view class="one_header_bottom2">></view>
            </view>
          </view>
          <!-- 下班 -->
          <view class="one_header one_header_right">
            <view class="one_header_bottom bottom_bod">
              <view class="one_header_bottom1 one_header_bottom12">
                <view class="textTop textTop_img"><view>下班</view>09:35</view>
                <view class="textBottom">
                  <view class="textBottom_Left">上地十四街海淀创业园</view>
                  <view class="textBottom_center"><image src='../../images/icon_arrow_black@3x.png'></image></view>
                  <view class="textBottom_Left">生命科学园地铁站昌平区</view>
                </view>
              </view>
              <view class="one_header_bottom2">></view>
            </view>
          </view> 
        </view>
      </swiper-item>
      <!-- 车主页 -->
      <swiper-item><view></view></swiper-item>
      <!-- 原力页 -->
      <swiper-item><view>第三屏</view></swiper-item>
    </swiper>
  </view>
</view>
