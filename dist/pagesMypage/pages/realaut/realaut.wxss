/* pages/mypage/realaut/realaut.wxss */

/* 顶部蓝色区域 */

page {
  height: 100%;
}

.carTop-bg {
  width: 100%;
  height: 64rpx;
  background: #64b5f6;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 22rpx;
  color: white;
  line-height: 42rpx;
}

.carTop-img {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

/* 认证区 */

.info {
  width: 96%;
  margin: 0 auto;
}

.info-txt1 {
  font-size: 28rpx;
  color: #28292c;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.info-txt2 {
  color: #939499;
  font-size: 24rpx;
}

.info-txt3 input {
  padding: 30rpx 0;
  border-bottom: 1px solid #f2f2f5;
  font-size: 34rpx;
  color: #737373;
}

.info-btn {
  position: absolute;
  transform: translate(-50%);
  left: 50%;
  bottom: 20rpx;
  width: 94%;
  background: #f6f6f6;
  border-radius: 22rpx;
  overflow: hidden;
}

.other-button-hover {
  color: #fff;
}

.other-button-hover-1 {
  background: linear-gradient(to right, #50d1ff, #4374ff);
  color: #fff;
}
/* 实名认证成功加原力 */
.modal-dialog {
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 30%;
  z-index: 9999;
  background: #000;
  opacity: 0.6;
  border-radius: 36rpx;
}

.modal-dialogCenter {
  width: 140rpx;
  height: 240rpx;
  margin: 30rpx auto;
}

.modal-title {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.modal-footer {
  height: 84rpx;
  width: 84rpx;
  padding: 24rpx 0;
  margin: 0 auto;
}

.modal-footer > image {
  width: 100%;
  height: 100%;
  display: block;
}

.btn-confirm {
  width: 100%;
  color: #ffaa1f;
  font-size: 32rpx;
  text-align: center;
}
