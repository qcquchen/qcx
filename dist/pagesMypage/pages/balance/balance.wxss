/* pages/mypage/balance/balance.wxss */
/* 顶部区 */
.balance-bg{
  width: 94%;
  height: 305rpx;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
}
.balance-txt{
  position: absolute;
  left: 60rpx;
  top: 68rpx;
  font-size: 34rpx;
  color:white;
  display: flex;
  align-items: center;
  
}
.balance-txt1{
  font-size: 56rpx;
    margin-left: 20rpx;
}
.balance-text{
  position: absolute;
  left: 60rpx;
  bottom: 90rpx;
  font-size: 26rpx;
  color:white;
  display: flex;
  align-items: center;
}
.balance-text1{
  font-size: 40rpx;
  margin-left: 20rpx;
}
.forward{
  position: absolute;
  right: 40rpx;
  bottom: 100rpx;
  width: 116rpx;
  height: 60rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FEBF0E ;
  font-size: 26rpx;
  color: white;
  border-radius: 16rpx;
}
.forward image{
  width: 20rpx;
  height: 20rpx;
  display: block;
}
/* 提现账号 */
.account{
  width: 94%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  margin: 0 auto;
}
.account-right{
  display: flex;
  align-items: center;
  color: #ACADB2;
}
.account-img{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.account-xian{
  width: 100%;
  height: 20rpx;
  background: #F5F5F7;
  margin: 20rpx auto;
}
/* 余额明细 */

.details-box {
  width: 94%;
  margin: 0 auto;
}

.details-txt {
  font-size: 32rpx;
  color: #232426;
  font-weight: 600;
  margin-top: 10rpx;
}

.details-dui {
  height: 120rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #f2f2f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.details-left {
  font-size: 34rpx;
}

.details-left-txt {
  font-size: 28rpx;
  color: #939499;
}

.details-right {
  font-size: 40rpx;
}
/* 未实名认证提示 */
.gary-box{
  width: 100%;
  height: 100%;
  position: absolute;
  background: #8B8C8E;
  top: 0;
  bottom: 0;
}
.setPsb{
  position: fixed;
  left: 50%;
  transform: translate(-50%);
  top: 18%;
  width: 70%;
  height: 360rpx;
  background: #F0F1F1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 20rpx;
}
.set-top{
  font-size: 34rpx;
  color: #030303;
  text-align: center;
}
.set-center{
  font-size: 26rpx;
  color: #030303;
  text-align: center;
  width: 87%;
  margin: 0 auto;
}
.set-bottom{
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #E8EAEA;
  box-sizing: border-box;
  height: 60rpx;
}
.set-bottom view{
  font-size: 34rpx;
  color: #007AFF;
  margin-top: 22rpx;
}
.set-xian{
  height: 85rpx;
  width: 2rpx;
  background: #E8EAEA;
}